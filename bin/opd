# pylint: disable=C,R,W0201,W0404


"runtime"


import os


from opd.configs import Config


Cfg         = Config()
Cfg.mod     = "cmd,mod"
Cfg.name    = __file__.split(os.sep)[-2]
Cfg.wd      = os.path.expanduser(f"~/.{Cfg.name}")
Cfg.pidfile = os.path.join(Cfg.wd, f"{Cfg.name}.pid")


# This file is placed in the Public Domain.
#
# pylint: disable=C,R,W0212


"utilities"


import os
import pwd
import sys
import termios
import time
import _thread


def checkpid(pid):
    if not pid:
        return False
    try:
        os.kill(pid, 0)
    except OSError:
        return False
    else:
        return True


def daemon(pidfile, verbose=False):
    pid = os.fork()
    if pid != 0:
        os._exit(0)
    os.setsid()
    pid2 = os.fork()
    if pid2 != 0:
        os._exit(0)
    if not verbose:
        with open('/dev/null', 'r', encoding="utf-8") as sis:
            os.dup2(sis.fileno(), sys.stdin.fileno())
        with open('/dev/null', 'a+', encoding="utf-8") as sos:
            os.dup2(sos.fileno(), sys.stdout.fileno())
        with open('/dev/null', 'a+', encoding="utf-8") as ses:
            os.dup2(ses.fileno(), sys.stderr.fileno())
    os.umask(0)
    os.chdir("/")
    if os.path.exists(pidfile):
        os.unlink(pidfile)
    cdir(os.path.dirname(pidfile))
    with open(pidfile, "w", encoding="utf-8") as fds:
        fds.write(str(os.getpid()))


def forever():
    while 1:
        try:
            time.sleep(1.0)
        except (KeyboardInterrupt, EOFError):
            _thread.interrupt_main()


def getpid(path):
    try:
        return int(open(path, encoding="utf-8").read())
    except (FileNotFoundError, ValueError):
        return None


def privileges(username):
    pwnam = pwd.getpwnam(username)
    os.setgid(pwnam.pw_gid)
    os.setuid(pwnam.pw_uid)


def wrap(func):
    old2 = None
    try:
        old2 = termios.tcgetattr(sys.stdin.fileno())
    except termios.error:
        pass
    try:
        func()
    except (KeyboardInterrupt, EOFError):
        print("")
    finally:
        if old2:
            termios.tcsetattr(sys.stdin.fileno(), termios.TCSADRAIN, old2)


# This file is placed in the Public Domain.
#
# pylint: disable=C,R,W0212,W0611,W0613,E0401


"main"

import getpass
import inspect
import os
import pwd
import readline
import sys
import termios
import time
import _thread


from opd import Broker, Cfg, Client, Command, Config, Default, Error, Event
from opd import Kernel, Object, Storage
from opd import cdir, launch, parse_cmd, spl, update
from opd import checkpid, daemon, forever, getpid, privileges, wrap


import opdmod as modules


def __dir__():
    return (
        'Cfg',
        'Console',
        'cmnd',
        'daemon',
        'forever',
        'main',
        'privileges',
        'wrap',
        'wrapped'
    )


__all__ = __dir__()


k = Kernel()


class Console(Client):

    def announce(self, txt):
        pass

    def callback(self, evt):
        Client.callback(self, evt)
        evt.wait()

    def poll(self):
        evt = Event()
        evt.orig = object.__repr__(self)
        evt.txt = input("> ")
        evt.type = "command"
        return evt

    def say(self, channel, txt):
        txt = txt.encode('utf-8', 'replace').decode()
        print(txt)


def cmnd(txt, out):
    clt = Client()
    clt.raw = out
    evn = Event()
    evn.orig = object.__repr__(clt)
    evn.txt = txt
    k.handle(evn)
    evn.wait()
    return evn


def main():
    k.skel()
    cfg = k.cfg
    parse_cmd(cfg, " ".join(sys.argv[1:]))
    update(cfg, cfg.sets)
    k.wd = cfg.wd
    if 'a' in cfg.opts:
        cfg.mod = ",".join(modules.__dir__())
    if "v" in cfg.opts:
        dte = time.ctime(time.time()).replace("  ", " ")
        k.debug(f"{Cfg.name.upper()} {Cfg.opts.upper()} started {dte}")
    if "h" in k.cfg.opts:
        from . import __doc__ as txt
        print(txt)
        return
    if "c" in k.cfg.opts:
        k.scan(modules, cfg.mod, True, cfg.dis, True)
        csl = Console()
        csl.start()
        k.forever()
        return
    if cfg.otxt:
        cfg.mod = ",".join(modules.__dir__())
        k.scan(modules, cfg.mod, False, cfg.sets.dis, False)
        return cmnd(cfg.otxt, print)
    if checkpid(getpid(cfg.pidfile)):
        print("daemon is already running.")
        return
    cfg.mod = ",".join(modules.__dir__())
    cfg.user = getpass.getuser()
    daemon(cfg.pidfile, "v" in k.cfg.opts)
    privileges(cfg.user)
    k.scan(modules, cfg.mod, True, cfg.dis, True)
    k.forever()


def wrapped():
    wrap(main)
    k.show()


if __name__ == "__main__":
    wrapped()
