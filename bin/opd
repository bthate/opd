#!/usr/bin/env python3
#
# pylint: disable=C,R


"main"


import getpass
import os
import readline
import sys
import time


sys.path.insert(0, os.getcwd())


from opd import Client, Config, Event, Kernel, update
from opd import checkpid, daemon, getpid, parse_cmd, privileges, wrap


import opdmod as modules


Cfg         = Config()
Cfg.mod     = "cmd,mod"
Cfg.name    = "opd"
Cfg.wd      = os.path.expanduser(f"~/.{Cfg.name}")
Cfg.pidfile = os.path.join(Cfg.wd, f"{Cfg.name}.pid")


k = Kernel()


class Console(Client):

    def __init__(self):
        Client.__init__(self)
        self.register("command", k.command)
        k.append(self)

    def announce(self, txt):
        pass

    def callback(self, evt):
        Client.callback(self, evt)
        evt.wait()

    def poll(self):
        evt = Event()
        evt.orig = object.__repr__(self)
        evt.txt = input("> ")
        evt.type = "command"
        return evt

    def say(self, channel, txt):
        txt = txt.encode('utf-8', 'replace').decode()
        print(txt)


def cmnd(txt, out):
    clt = Client()
    clt.raw = out
    k.append(clt)
    evn = Event()
    evn.orig = object.__repr__(clt)
    evn.txt = txt
    k.command(evn)
    evn.wait()
    return evn


def main():
    k.skel()
    k.register("command", k.command)
    readline.redisplay()
    parse_cmd(Cfg, " ".join(sys.argv[1:]))
    update(k.cfg, Cfg)
    update(k.cfg, Cfg.sets)
    k.wd = k.wd or Cfg.wd
    if 'a' in Cfg.opts:
        Cfg.mod = ",".join(modules.__dir__())
    if "v" in Cfg.opts:
        dte = time.ctime(time.time()).replace("  ", " ")
        k.debug(f"{Cfg.name.upper()} {Cfg.opts.upper()} started {dte}")
    if "h" in Cfg.opts:
        from . import __doc__ as txt
        print(txt)
        return
    if "c" in Cfg.opts:
        k.scan(modules, Cfg.mod, True, Cfg.dis, True)
        csl = Console()
        k.append(csl)
        csl.start()
        k.forever()
        return
    if Cfg.otxt:
        Cfg.mod = ",".join(modules.__dir__())
        k.scan(modules, Cfg.mod, False, Cfg.sets.dis, False)
        return cmnd(Cfg.otxt, print)
    if checkpid(getpid(Cfg.pidfile)):
        print("daemon is already running.")
        return
    Cfg.mod = ",".join(modules.__dir__())
    Cfg.user = getpass.getuser()
    daemon(Cfg.pidfile, "v" in Cfg.opts)
    privileges(Cfg.user)
    k.scan(modules, Cfg.mod, True, Cfg.dis, True)
    k.forever()


def wrapped():
    wrap(main)
    k.all()


if __name__ == "__main__":
    wrapped()
